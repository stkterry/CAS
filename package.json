{
  "name": "@stkterry/cah",
  "version": "0.1.0",
  "description": "A CAH clone",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "server": "nodemon app.js",
    "server:debug": "nodemon --inspect app.js",
    "frontend-install": "npm install --prefix frontend",
    "frontend": "npm start --prefix frontend",
    "sass": "sass --watch frontend/src/assets/stylesheets/input.scss:frontend/src/assets/stylesheets/App.css",
    "dev": "concurrently \"npm run server:debug\" \"npm run frontend\" \"npm run sass\""
  },
  "author": "Steven K Terry",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.22",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "validator": "^13.1.1"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4"
  }
}
